.editor{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-top: 20rpx;
  background: #f5f5f5;
}
.editBox{
  width: 100%;
  margin-bottom: 20rpx;
  height: auto;
  position: relative;
  border-bottom: 1rpx solid #d9d9d9;
  box-sizing: border-box;
  background: #fff;
}
.editBox .count{
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
  font-size: 28rpx;
  color: #999;
}
.editBox picker:first-child{
  border-bottom: 1px solid #e5e5e5;
}
textarea{
  width: 100%;
  height: 300rpx;
  padding: 20rpx 20rpx 50rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  line-height: 1.5;
  color: #333;
}
input,.picker{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #333;
  position: relative;
  display: block;
}
.sex{
    height: 100rpx;
    line-height: 100rpx;
    margin: 0 30rpx;
    box-sizing: border-box;
    font-size: 32rpx;
    color: #333;
    position: relative;
    display: block;
}
.sex:first-child{
  border-bottom: 1rpx solid #e5e5e5;
}
.sex image{
  position: absolute;
  right: 20rpx;
  top: 27rpx;
  width: 45rpx;
  height: 45rpx;
}
.userBox{
  width: 100%;
  height:600rpx;
  position: relative;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.userBox .userImg{
  width: 690rpx;
  height: 600rpx;
}
.lable{
  height: 100rpx;
  width: 50rpx;
    color: #999;
}
.arrow {
  height: 100rpx;
  width: 30rpx;
  display: -webkit-box;
  display: -moz-box;
  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flexbox;
  display: flex;
  padding-left: 14rpx;
  box-sizing: border-box;
  position: absolute;
  right: 30rpx;
  top: 0;
}
.arrow image {
  width: 16rpx;
  height: 34rpx;
  margin: auto 0;
}
.whbtn{
  color:#ccc;
  border: 1px solid #ccc;
}