.member{
  width: 100%;
  min-height: 100%;
  background: #f5f5f5;
  box-sizing: border-box;
  position: relative;
  padding-bottom: 300rpx;
}
.memTop {
  width: 100%;
  margin-bottom: 85rpx;
  box-sizing: border-box;
  position: relative;
}
.memTop:after {
  content: " ";
  padding-top: 61.067%;
  display: block;
}
.memTop .bgTop {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.userCard {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 75rpx 30rpx 110rpx;
}
.userCard .userBox {
  width: 270rpx;
  height: 270rpx;
  box-sizing: border-box;
  position: relative;
}
.userCard .userBox .userImg {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  border: 8rpx solid #fff;
}
.userCard .userMsg {
  width: 100%;
  height: 270rpx;
  box-sizing: border-box;
  padding-left: 320rpx;
  position: relative;
}
.userCard .userMsg .msg {
  font-size: 34rpx;
  line-height: 1em;
  margin-bottom: 30rpx;
  color: #fff;
  text-overflow: ellipsis;
  word-wrap: normal;
  white-space: nowrap;
  overflow: hidden;
  display: block;
  width: 100%;
  box-sizing: border-box;
}
.userCard .userMsg .msg image{
  width: 80rpx;
  height: 30rpx;
  vertical-align: top;
}
.joinBox {
  position: absolute;
  bottom: -65rpx;
  left: 0;
  z-index: 10;
  width: 100%;
  height: 130rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  text-align: center;
}
.joinBox .joinBar {
  width: 100%;
  height: 100%;
  -moz-border-radius: 10rpx;
  -webkit-border-radius: 10rpx;
  border-radius: 10rpx;
  background: #fff;
  padding: 25rpx 0;
  box-sizing: border-box;
  display: -webkit-box;
  display: -moz-box;
  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flexbox;
  display: flex;
}
.joinBox .joinBar .joinMsg {
  margin: auto;
  width: 33.33%;
  height: 100%;
  box-sizing: border-box;
}
.joinBox .joinBar .joinMsg .mText {
  font-size: 32rpx;
  line-height: 1;
  margin-bottom: 10rpx;
  color: #333;
}
.joinBox .joinBar .joinMsg .tips {
  font-size: 26rpx;
  line-height: 1;
  color: #999;
}
.joinBox .joinBar .borL {
  position: relative;
}
.joinBox .joinBar .borL .line {
  position: absolute;
  top: 15%;
  left: 0;
  width: 100%;
  height: 70%;
  border-left: 2rpx solid #e7e7e7;
  border-right: 2rpx solid #e7e7e7;
}
.memBelow {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.memBelow .profile {
  width: 100%;
  padding: 40rpx 30rpx 30rpx;
  box-sizing: border-box;
  -moz-border-radius: 10rpx;
  -webkit-border-radius: 10rpx;
  border-radius: 10rpx;
  background: #fff;
}
.memBelow .profile .title {
  position: relative;
  width: 100%;
  border-top: 2rpx solid #e7e7e7;
  text-align: center;
}
.memBelow .profile .title text {
  display: inline-block;
  padding: 0 40rpx;
  background: #fff;
  position: relative;
  top: -20rpx;
  font-size: 34rpx;
  line-height: 40rpx;
  color: #333;
}
.memBelow .profile .intro {
  position: relative;
  top: -15rpx;
  width: 100%;
  text-align: justify;
  font-size: 28rpx;
  line-height: 1.5;
  color: #666;
}
  /*小程序码*/
.applet{
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 24rpx;
  line-height: 1.5;
  color: #3b865f;
  text-align: center;
}
.applet image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.menBtnBox{
  position: absolute;
  left: 0;
  bottom: 0;
  padding:0 30rpx 50rpx;
  width: 100%;
  box-sizing: border-box;
}
.menBtnBox .hint {
  font-size: 26rpx;
  line-height: 40rpx;
  color: #999;
  text-align: center;
  margin-bottom:20rpx;
}
.menBtnBox .wxBtn{
  margin-bottom: 20rpx;
}
.menBtnBox .whBtn{
  border: 1px solid #ccc;
  background: #f5f5f5;
  color: #333;
}