.edit{
  width: 100%;
  background: #f5f5f5;
  box-sizing: border-box;
  padding-top: 20rpx;
}
.itemList {
  margin-bottom: 20rpx;
  width: 100%;
  border-bottom: 1rpx solid #e7e7e7;
  background: #fff;
  box-sizing: border-box;
}
.itemBox {
  width: 100%;
  padding-left: 30rpx;
  background: #fff;
  box-sizing: border-box;
}
.itemBox:last-child .item {
  border: none;
}
.navigator-hover {
  background-color: #fafafa;
  opacity: 0.95;
}
.item {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  padding-right: 30rpx;
  border-bottom: 1rpx solid #d9d9d9;
  box-sizing: border-box;
  overflow: hidden;
}
.item1{
  height: 180rpx;
  line-height: 180rpx;
}
.item1 .userImg {
  height: 180rpx;
  display: -webkit-box;
  display: -moz-box;
  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flexbox;
  display: flex;
}
.item1 .userImg image {
  width: 133rpx;
  height: 133rpx;
  -moz-border-radius: 50%;
  -webkit-border-radius: 50%;
  border-radius: 50%;
  margin: auto 0;
  border: 1rpx solid #e6e6e6;
}
.item2{
  height:auto;
  position: relative;
  padding-right: 60rpx;
}
.item2 .label{
  position: absolute;
  top: 50%;
  left: 0;
  transform:  translateY(-50%);
}
.item2 .arrow {
  height: 110rpx;
  position: absolute;
  top: 50%;
  right: 30rpx;
  transform:  translateY(-50%);
}
.item2 .introBox {
  min-height: 110rpx;
  width: 100%;
  padding: 15rpx 0;
  padding-left: 170rpx;
  display: -webkit-box;
  display: -moz-box;
  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flexbox;
  display: flex;
  box-sizing: border-box;
}
.item2 .introBox .intro {
  width: 100%;
  font-size: 28rpx;
  line-height: 34rpx;
  color: #808080;
  margin: auto 0;
  text-align: right;
}
.label text {
  font-size: 32rpx;
  color: #333;
  margin: auto 0;
}
.arrow {
  height: 120rpx;
  width: 30rpx;
  display: -webkit-box;
  display: -moz-box;
  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flexbox;
  display: flex;
  padding-left: 14rpx;
  box-sizing: border-box;
}
.arrow image {
  width: 16rpx;
  height: 34rpx;
  margin: auto 0;
}
.itemBox .text {
  height: 120rpx;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
  display: block;
  display: -webkit-box;
  display: -moz-box;
  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flexbox;
  display: flex;
}
.text text {
  font-size: 28rpx;
  color: #808080;
  margin: auto 0;
}
.editTips {
  width: 100%;
  font-size: 30rpx;
  line-height: 1;
  padding: 10rpx 30rpx 25rpx;
  color: #999;
  box-sizing: border-box;
}