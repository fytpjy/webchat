.preview{
    width: 100%;
    background: #f5f5f5;
    box-sizing: border-box;
    padding-bottom: 100rpx;
}
.previewTop {
    width: 100%;
    margin-bottom: 20rpx;
    background: #fff;
    padding: 0 30rpx;
    box-sizing: border-box;
}
.previewTop .topic {
    padding: 30rpx 0;
    font-size: 32rpx;
    line-height: 1.5;
    color: #333;
    border-bottom: 1rpx solid #d9d9d9;
}
.previewTop .cont {
    font-size: 32rpx;
    line-height: 90rpx;
    padding-left: 66rpx;
    box-sizing: border-box;
    color: #666;
    border-bottom: 1rpx solid #d9d9d9;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-wrap: normal;
    display: block;
    position: relative;
}
.previewTop .cont image {
    position: absolute;
    bottom: 20rpx;
    left: 0;
    width: 40rpx;
    height: 50rpx;
}
.previewTop .cont .arrow {
    height: 90rpx;
    width: 20rpx;
    position: relative;
}
.previewTop .cont .arrow image {
    width: 16rpx;
    height: 34rpx;
    position: absolute;
    right: 0;
    top: 50%;
    margin-top: -17rpx;
}
.previewMid {
    width: 100%;
    margin-bottom: 20rpx;
    background: #fff;
    padding: 15rpx 30rpx;
    box-sizing: border-box;
}
.previewMid .title {
    font-size: 32rpx;
    line-height: 54rpx;
    color: #000;
    margin-bottom: 10rpx;
}
.previewMid .flow {
    font-size: 32rpx;
    line-height: 70rpx;
    color: #000;
    padding-left: 66rpx;
    position: relative;
}
.previewMid .flow:before{
    content: " ";
    display: block;
    background:#ccc;
    position: absolute;
    top: 25rpx;
    left: 20rpx;
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
}
.previewBelow {
    width: 100%;
    margin-bottom: 20rpx;
    background: #fff;
    padding-bottom:  60rpx;
    box-sizing: border-box;
}
.previewBelow .title {
    padding: 0 30rpx;
    font-size: 32rpx;
    line-height: 80rpx;
    color: #000;
}
.previewBelow .intro {
    padding: 0 30rpx;
    font-size: 28rpx;
    line-height: 1.8;
    color: #666;
    text-align: justify;
    display: block;
}