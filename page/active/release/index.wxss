.release{
    width: 100%;
    background: #f5f5f5;
    box-sizing: border-box;
    padding-bottom: 100rpx;
}
.editBox {
    margin-top: 30rpx;
    padding-left: 30rpx;
    background: #fff;
    width: 100%;
    box-sizing: border-box;
}
.textBox {
    padding-right: 30rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #d9d9d9;
    overflow: hidden;
    height: 90rpx;
    line-height: 90rpx;
}
.textarea {
    width: 100%;
    height: auto;
    padding-right: 30rpx;
    /*border-bottom: 1rpx solid #d9d9d9;*/
    box-sizing: border-box;
}
.textarea textarea {
    width: 100%;
    height: 240rpx;
    padding: 0;
    font-size: 30rpx;
    color: #666;
    box-sizing: border-box;
}
.text-1{
    position: relative;
    padding-bottom: 30rpx;
    width: 100%;
    box-sizing: border-box;
}
.textarea .count{
    position: absolute;
    right: 0;
    bottom: 20rpx;
    font-size: 28rpx;
    color: #999;
}
.label {
    font-size: 32rpx;
    color: #333;
    width: 170rpx;
    height: 80rpx;
    line-height: 80rpx;
    box-sizing: border-box;
}
.input {
    width: 100%;
    height: 90rpx;
    padding-left: 170rpx;
    box-sizing: border-box;
}
.input input {
    width: 100%;
    height: 90rpx;
    padding-left: 30rpx;
    font-size: 30rpx;
    color: #666;
    box-sizing: border-box;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-wrap: normal;
    display: block;
}

.arrow {
    height: 80rpx;
    margin-left: 20rpx;
    display: -webkit-box;
    display: -moz-box;
    display: -webkit-flex;
    display: -moz-flex;
    display: -ms-flexbox;
    display: flex;
}
.arrow image {
    width: 16rpx;
    height: 34rpx;
    margin: auto 0;
}
.site {
    padding-left: 30rpx;
    font-size: 28rpx;
    color: #666;
}
.hint {
    font-size: 26rpx;
    color: #999;
}
.switchBox .switch {
    height: 80rpx;
    display: -webkit-box;
    display: -moz-box;
    display: -webkit-flex;
    display: -moz-flex;
    display: -ms-flexbox;
    display: flex;
}
.switchBox .switch text {
    font-size: 30rpx;
    color: #999;
    padding-right: 20rpx;
    line-height: 80rpx;
    box-sizing: border-box;
}
.switchBox .switch switch {
    margin: auto 0;
    transform: scale(0.8);
}

.psection {
    font-size: 28rpx;
    color: #999;
}
.pickerBox {
    width: 100%;
    padding-left: 200rpx;
    height: 80rpx;
    box-sizing: border-box;
}
.pickerBox .date {
    height: 32rpx;
    width: 100%;
    margin: auto 0;
    font-size: 30rpx;
    color: #666;
}
.pickerBox .line {
    color: #666;
}
.pickerBox .time {
    height: 32rpx;
    width: 100rpx;
    margin: auto 0;
    font-size: 30rpx;
    color: #666;
}
.pickerBox .start {
    text-align: left;
}
.pickerBox .end {
    text-align: right;
}
.wxLink {
    border: none;
}
.wxLink .label {
    width: 190rpx;
}
.wxLink .input {
    padding-left: 200rpx;
}
.wxLink .input input{
    padding: 0;
}
.textSite{
    width: 100%;
    padding: 0;
}
.textSite input{
    width: 100%;
    padding: 0;
}
.selectBox {
    width: 100%;
    box-sizing: border-box;
}
.selectBox .select {
    width: 100%;
    height: 80rpx;
    font-size: 30rpx;
    line-height: 80rpx;
    padding-left: 70rpx;
    padding-right: 30rpx;
    border-bottom: 1rpx solid #d9d9d9;
    position: relative;
    box-sizing: border-box;
    color: #999;
    display: block;
}
.selectBox .select:before {
    content: " ";
    width: 40rpx;
    height: 40rpx;
    border: 1rpx solid #ccc;
    box-sizing: border-box;
    -moz-border-radius: 50%;
    -webkit-border-radius: 50%;
    border-radius: 50%;
    position: absolute;
    top: 23rpx;
    left: 0;
}
.selectBox .select .left {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 23rpx;
    left: 0;
    display: none;
}
.selectBox .right {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 23rpx;
    right: 30rpx;
    display: none;
}
.selectBox .select.active {
    color: #333;
}
.selectBox .select.active .left,
.selectBox .select.active .right {
    display: block;
}
.selectBox .select:active {
    background: #f2f2f2;
}
.addTip {
    background: #f5f5f5;
    width: 100%;
    padding: 30rpx 30rpx 15rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #888888;
}
.addCode {
    background: #fff;
    padding: 30rpx 30rpx 20rpx;
    box-sizing: border-box;
    width: 100%;
    border-top: 1rpx solid #d9d9d9;
    border-bottom: 1rpx solid #d9d9d9;
}
.addCode image {
    width: 120rpx;
    height: 120rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
}
@media all and (max-width: 360px) {
    .textBox.switchBox .switch switch {
        transform: scale(0.7);
    }
}