.comment {
    width: 100%;
    background: #f5f5f5;
    box-sizing: border-box;
    padding-bottom: 100rpx;
}
.tips {
    padding: 40rpx 30rpx;
    border-bottom: 1rpx solid #d9d9d9;
    background: #fff;
    width: 100%;
    box-sizing: border-box;
    margin-bottom: 20rpx;
    font-size: 28rpx;
    line-height: 1.5;
    color: #666;
}
.part {
    width: 100%;
    background: #fff;
    margin-bottom: 20rpx;
    border-bottom: 1rpx solid #d9d9d9;
}
.part.part3 {
    margin-bottom: 0;
}
.titleBox {
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 30rpx;
    border-bottom: 1rpx solid #d9d9d9;
    box-sizing: border-box;
}
.titleBox .title {
    font-size: 32rpx;
    color: #333;
}
.titleBox .hint {
    font-size: 26rpx;
    color: #999;
}
.startBox {
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx 30rpx;
}
.startBox .startImg {
    width: 690rpx;
    height: 80rpx;
    position: relative;
}
.startBox .start {
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: absolute;
    top: 0;
    left: 0;
}
.startBox .start image {
    width: 690rpx;
    height: 80rpx;
}
.selectBox {
    width: 100%;
    padding-left: 30rpx;
    box-sizing: border-box;
}
.selectBox .select {
    width: 100%;
    height: 80rpx;
    font-size: 30rpx;
    line-height: 80rpx;
    padding-left: 70rpx;
    padding-right: 30rpx;
    border-bottom: 1rpx solid #d9d9d9;
    position: relative;
    box-sizing: border-box;
    display: block;
    overflow: hidden;
}
.selectBox .select:last-child {
    border: none;
}
.selectBox .select:before {
    content: " ";
    width: 40rpx;
    height: 40rpx;
    border: 1rpx solid #ccc;
    box-sizing: border-box;
    -moz-border-radius: 50%;
    -webkit-border-radius: 50%;
    border-radius: 50%;
    position: absolute;
    top: 23rpx;
    left: 0;
}
.selectBox .select .left {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 23rpx;
    left: 0;
    display: none;
}
.selectBox .select .right {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 23rpx;
    right: 30rpx;
    display: none;
}
.selectBox .select.active .left,
.selectBox .select.active .right {
    display: block;
}
.selectBox .select:active {
    background: #f2f2f2;
}
.feedback {
    width: 100%;
    position: relative;
    padding:20rpx 30rpx 50rpx;
    box-sizing: border-box;
}
.feedback .count{
    position: absolute;
    right: 30rpx;
    bottom: 20rpx;
    font-size: 28rpx;
    color: #999;
}
.feedback textarea {
    font-size: 30rpx;
    line-height: 20px;
    height: 240rpx;
    color: #666;
    width: 100%;
    display: block;
    text-align: justify;
}
.feedback .psection {
    color: #999;
}
